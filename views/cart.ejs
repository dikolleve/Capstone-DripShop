<%- include("partials/header") %>
<%- include("partials/navbar") %>

<div class="container mx-auto">
    <h1>Your Cart</h1>
    <div class="flex flex-col space-y-3">
    <% cart.map(item => { %>
        <div class="flex items-center border px-3 gap-x-3">
            <img src="<%= item.image %>" alt="<%= item.title %>" class="w-12 h-12 object-contain">
            <div class="p-3">
                <p><%= item.title %></p>
                <p>$<%= item.price %></p>
                <button class="bg-gray-300 hover:bg-gray-400 text-sm rounded px-2">-</button>
                <button class="bg-gray-300 hover:bg-gray-400 text-sm rounded px-2">+</button>
                <button class="bg-red-300 hover:bg-red-400 text-sm rounded px-2">x</button>
            </div>
        </div>
    <% }); %>
    </div>


</div>


<%- include("partials/footer") %>