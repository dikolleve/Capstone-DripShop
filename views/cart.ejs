<%- include("partials/header") %>
<%- include("partials/navbar") %>

<div class="container mx-auto">
    <h1 class="text-2xl font-semibold mt-5">Your Cart</h1>
    <% if(cart.length > 0) { %>
    <div class="flex flex-col space-y-3 mt-5">
        <% let total = 0 %>
        <% cart.map(item => { %>
            <% total += (item.price * item.quantity) %>
            <div class="flex items-center border shadow px-3 gap-x-3">
                <img src="<%= item.image %>" alt="<%= item.title %>" class="w-12 h-12 object-contain">
                <div class="p-3">
                    <p class="font-semibold"><%= item.title %></p>
                    <p>$<%= item.price %> x <%= item.quantity %></p>
                    <div class="mt-3 flex gap-x-2">
                        <form action="/cart/decrease/<%= item.id %>" method="post">
                            <button type="submit" class="bg-gray-300 hover:bg-gray-400 text-sm rounded px-2">-</button>
                        </form>
                        <form action="/cart/increase/<%= item.id %>" method="post">
                            <button type="submit" class="bg-gray-300 hover:bg-gray-400 text-sm rounded px-2">+</button>
                        </form>
                        <form action="">
                            <button class="bg-red-300 hover:bg-red-400 text-sm rounded px-2">x</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    <div class="text-right">
        <p class="text-xl font-semibold mt-5">Total $<%= total %></p>
        <button class="bg-green-500 hover:bg-green-600 transition duration text-white px-3 py-2 rounded mt-3">Proceed to Checkout</button>
    <% }else{ %>
        <div>Cart is empty</div>
    <% } %>

</div>
</div>

<%- include("partials/footer") %>