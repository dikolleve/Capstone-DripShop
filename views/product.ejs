<%- include("partials/header") %>

<div class="container mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row gap-8">
        <div class="flex-shrink-0 md:w-1/2 w-full">
            <img src="<%= products.image %>" alt="" class="w-full h-auto object-contain max-h-[400px] mx-auto">
        </div>
        <div class="md:w-1/2 w-full">
            <h1 class="text-2xl font-semibold mb-3"><%= products.title %></h1>
            <p class="text-gray-600 text-sm mb-3">Category: <%= products.category %></p>
            <p class="text-blue-700 text-2xl font-semibold mb-3">$<%= products.price %></p>
            <p class="mb-5"><%= products.description %></p>
            <button class="bg-blue-600 hover:bg-blue-700 px-3 py-2 text-white transition duration-300 rounded">Add to Cart</button>
        </div>
    </div>
</div>

<%- include("partials/footer") %>